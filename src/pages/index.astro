---
import QuoteSeparator from "../components/QuoteSeparator.astro";
import Layout from "../layouts/Layout.astro";

import {
  ACCOUNT_HOLDER,
  ACCOUNT_NUMBER,
  BANK_ACCOUNT_MESSAGE,
  BANK_NAME,
  DRESS_CODE_COLORS_TO_AVOID,
  DRESS_CODE_MESSAGE,
  EVENT_1_ADDRESS,
  EVENT_1_MAP_LINK,
  EVENT_1_NAME,
  EVENT_1_PLACE,
  EVENT_1_TIME,
  EVENT_2_ADDRESS,
  EVENT_2_MAP_LINK,
  EVENT_2_NAME,
  EVENT_2_PLACE,
  EVENT_2_TIME,
  FOOTER_MESSAGE,
  HERO_TITLE,
  INVITATION_MESSAGE,
  QUOTE_FOOTER,
  QUOTE_TEXT,
  SCHEDULE_DETAILS,
  SCHEDULE_DOWNLOAD_FILENAME,
  SCHEDULE_END_DATE,
  SCHEDULE_LOCATION,
  SCHEDULE_START_DATE,
  SCHEDULE_TITLE,
  SITE_TITLE,
  WEDDING_COUPLE,
  WEDDING_DATE,
} from "astro:env/server";
import BankAccount from "../components/BankAccount.astro";
import BGM from "../components/BGM.astro";
import Countdown from "../components/Countdown.astro";
import DateWithPhotos from "../components/DateWithPhotos.astro";
import DressCode from "../components/DressCode.astro";
import EventDetails from "../components/EventDetails.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import ImageSeparator from "../components/ImageSeparator.astro";
import MessageSeparator from "../components/MessageSeparator.astro";
import RSVPForm from "../components/RSVPForm.astro";
import Schedule from "../components/Schedule.astro";
import { dateWithTz, timeForEvent, timeWithTz } from "../utils/formatDates";

const layoutProps = {
  title: SITE_TITLE,
};

const bgmProps = {
  src: "/audios/bgm.wav",
};

const heroProps = {
  couple: WEDDING_COUPLE,
  title: HERO_TITLE,
  img: "/images/hero.jpg",
};

const messageSeparatorProps = {
  message: INVITATION_MESSAGE,
  footer: "¡Estás invitado!",
};

const dateWithPhotosProps = {
  date: dateWithTz(WEDDING_DATE),
};

const countdownProps = {
  targetDate: dateWithTz(WEDDING_DATE),
};

const scheduleProps = {
  text: SCHEDULE_TITLE,
  startDate: dateWithTz(SCHEDULE_START_DATE),
  endDate: dateWithTz(SCHEDULE_END_DATE),
  details: SCHEDULE_DETAILS,
  location: SCHEDULE_LOCATION,
  filename: SCHEDULE_DOWNLOAD_FILENAME,
};

const imageSeparatorProps = {
  src: "/images/separator_1.jpg",
  alt: "Separador decorativo",
};

const quoteSeparatorProps = {
  quote: QUOTE_TEXT,
  footer: QUOTE_FOOTER,
};

const placeDetailsProps = [
  {
    name: EVENT_1_NAME,
    time: timeForEvent(timeWithTz(EVENT_1_TIME)),
    place: EVENT_1_PLACE,
    address: EVENT_1_ADDRESS,
    mapLink: EVENT_1_MAP_LINK,
    image: "/images/event_detail_1.jpg",
  },
  {
    name: EVENT_2_NAME,
    time: timeForEvent(timeWithTz(EVENT_2_TIME)),
    place: EVENT_2_PLACE,
    address: EVENT_2_ADDRESS,
    mapLink: EVENT_2_MAP_LINK,
    image: "/images/event_detail_2.jpg",
  },
];

const rsvpProps = {};

const dressCodeProps = {
  message: DRESS_CODE_MESSAGE,
  colorsToAvoid: DRESS_CODE_COLORS_TO_AVOID.split(","),
};

const bankAccountProps = {
  message: BANK_ACCOUNT_MESSAGE,
  bankDetails: {
    bankName: BANK_NAME,
    accountNumber: ACCOUNT_NUMBER,
    accountHolder: ACCOUNT_HOLDER,
  },
};

const footerProps = {
  message: FOOTER_MESSAGE,
  couple: WEDDING_COUPLE,
};

export const prerender = true;
---

<Layout {...layoutProps}>
  <BGM {...bgmProps} />
  <Hero {...heroProps} />
  <MessageSeparator {...messageSeparatorProps} />
  <DateWithPhotos {...dateWithPhotosProps} />
  <Countdown {...countdownProps} />
  <Schedule {...scheduleProps} />
  <ImageSeparator {...imageSeparatorProps} />
  <QuoteSeparator {...quoteSeparatorProps} />
  <EventDetails {...placeDetailsProps[0]} imagePosition="left" />
  <EventDetails {...placeDetailsProps[1]} imagePosition="right" />
  <DressCode {...dressCodeProps} />
  <BankAccount {...bankAccountProps} />
  <RSVPForm {...rsvpProps} />
  <Footer {...footerProps} />
</Layout>

