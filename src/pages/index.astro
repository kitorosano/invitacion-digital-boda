---
import BGM from "../components/BGM.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";

import { HERO_TITLE, WEDDING_COUPLE, WEDDING_DATE } from "astro:env/server";

const heroProps = {
  couple: WEDDING_COUPLE,
  title: HERO_TITLE,
  date: WEDDING_DATE,
  img: "/images/hero.jpg",
};

const bgmProps = {
  src: "/audios/bgm.wav",
};
---

<Layout>
  <BGM {...bgmProps} />
  <Hero {...heroProps} />
</Layout>
