---
import QuoteSeparator from "../components/QuoteSeparator.astro";
import Layout from "../layouts/Layout.astro";
import BankAccount from "../components/BankAccount.astro";
import BGM from "../components/BGM.astro";
import Countdown from "../components/Countdown.astro";
import DateWithPhotos from "../components/DateWithPhotos.astro";
import DressCode from "../components/DressCode.astro";
import EventDetails from "../components/EventDetails.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import ImageSeparator from "../components/ImageSeparator.astro";
import MessageSeparator from "../components/MessageSeparator.astro";
import RSVPForm from "../components/RSVPForm.astro";
import Schedule from "../components/Schedule.astro";
import {
  bankAccountProps,
  bgmProps,
  countdownProps,
  dateWithPhotosProps,
  dressCodeProps,
  footerProps,
  heroProps,
  imageSeparatorProps,
  layoutProps,
  messageSeparatorProps,
  placeDetailsProps,
  quoteSeparatorProps,
  rsvpProps,
  scheduleProps,
} from "../constants/props";

export const prerender = true;
---

<Layout {...layoutProps}>
  <BGM {...bgmProps} />
  <Hero {...heroProps} />
  <MessageSeparator {...messageSeparatorProps} />
  <DateWithPhotos {...dateWithPhotosProps} />
  <Countdown {...countdownProps} />
  <Schedule {...scheduleProps} />
  <ImageSeparator {...imageSeparatorProps} />
  <QuoteSeparator {...quoteSeparatorProps} />
  <EventDetails {...placeDetailsProps[0]} imagePosition="left" />
  <EventDetails {...placeDetailsProps[1]} imagePosition="right" />
  <DressCode {...dressCodeProps} />
  <BankAccount {...bankAccountProps} />
  <RSVPForm {...rsvpProps} />
  <Footer {...footerProps} />
</Layout>
