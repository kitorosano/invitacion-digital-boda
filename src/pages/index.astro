---
import BGM from "../components/BGM.astro";
import Countdown from "../components/Countdown.astro";
import DateWithPhotos from "../components/DateWithPhotos.astro";
import EventDetails from "../components/EventDetails.astro";
import Hero from "../components/Hero.astro";
import ImageSeparator from "../components/ImageSeparator.astro";
import InvitationMessage from "../components/InvitationMessage.astro";
import Schedule from "../components/Schedule.astro";
import Layout from "../layouts/Layout.astro";

import {
  EVENT_1_ADDRESS,
  EVENT_1_MAP_LINK,
  EVENT_1_NAME,
  EVENT_1_PLACE,
  EVENT_1_TIME,
  EVENT_2_ADDRESS,
  EVENT_2_MAP_LINK,
  EVENT_2_NAME,
  EVENT_2_PLACE,
  EVENT_2_TIME,
  HERO_TITLE,
  INVITATION_MESSAGE,
  WEDDING_COUPLE,
  WEDDING_DATE,
} from "astro:env/server";

const heroProps = {
  couple: WEDDING_COUPLE,
  title: HERO_TITLE,
  img: "/images/hero.jpg",
};

const bgmProps = {
  src: "/audios/bgm.wav",
};

const invitationMessageProps = {
  message: INVITATION_MESSAGE,
};

const dateWithPhotosProps = {
  date: WEDDING_DATE,
};

const countdownProps = {
  targetDate: WEDDING_DATE,
};

const placeDetailsProps = [
  {
    name: EVENT_1_NAME,
    time: EVENT_1_TIME,
    place: EVENT_1_PLACE,
    address: EVENT_1_ADDRESS,
    mapLink: EVENT_1_MAP_LINK,
  },
  {
    name: EVENT_2_NAME,
    time: EVENT_2_TIME,
    place: EVENT_2_PLACE,
    address: EVENT_2_ADDRESS,
    mapLink: EVENT_2_MAP_LINK,
  },
];

const scheduleProps = {
  // Add any props needed for the Schedule component
};

const imageSeparatorProps = {
  src: "/images/separator_1.jpg",
  alt: "Separador decorativo",
};
---

<Layout>
  <BGM {...bgmProps} />
  <Hero {...heroProps} />
  <InvitationMessage {...invitationMessageProps} />
  <DateWithPhotos {...dateWithPhotosProps} />
  <Countdown {...countdownProps} />
  <Schedule {...scheduleProps} />
  <ImageSeparator {...imageSeparatorProps} />
  {placeDetailsProps.map((event) => <EventDetails {...event} />)}
</Layout>
