---
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="format-detection" content="telephone=no" />
    <title>{title}</title>

    <SpeedInsights />
    <Analytics />
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueThin.otf") format("opentype");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueLight.otf") format("opentype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueRoman.otf") format("opentype");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueMedium.otf") format("opentype");
    font-weight: 600;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueBold.otf") format("opentype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueBlack.otf") format("opentype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  :root {
    /* FONTS FAMILY */
    --font-primary: "Helvetica Neue", Arial, sans-serif;

    /* COLORS */
    --color-bg-dark: oklch(0.92 0.02 260);
    --color-bg: oklch(0.96 0.02 260);
    --color-bg-light: oklch(1 0.02 260);
    --color-text: oklch(0.15 0.04 260);
    --color-text-muted: oklch(0.4 0.04 260);
    --color-highlight: oklch(1 0.04 260);
    --color-border: oklch(0.6 0.04 260);
    --color-border-muted: oklch(0.7 0.04 260);

    --color-danger: oklch(0.5 0.08 30);
    --color-warning: oklch(0.5 0.08 100);
    --color-success: oklch(0.5 0.08 160);
    --color-info: oklch(0.5 0.08 260);

    --gradient: linear-gradient(
      0deg,
      var(--color-bg) 95%,
      var(--color-bg-light)
    );
    --gradient-hover: linear-gradient(
      0deg,
      var(--color-bg),
      var(--color-bg-light)
    );

    /* SHADOWS */
    --shadow-sm: 0 1px 1px hsla(0, 0%, 0%, 0.07), 0 2px 2px hsla(0, 0%, 0%, 0.1);
    --shadow-md: 0 2px 2px hsla(0, 0%, 0%, 0.07),
      0 4px 4px hsla(0, 0%, 0%, 0.15);

    /* TEXT SIZE */
    --text-size-xs: 0.6rem;
    --text-size-sm: 0.8rem;
    --text-size-md: 1rem;
    --text-size-lg: 1.5rem;
    --text-size-xl: 2rem;
    --text-size-2xl: 3rem;
    --text-size-3xl: 4rem;
  }

  html {
    font-family: var(--font-primary);
    background: var(--color-bg-dark);
    color: var(--color-dark);
  }

  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;

    overflow-x: hidden;

    user-select: none; /* Standard property */
    -webkit-user-select: none; /* For Safari and other WebKit browsers on iOS */
    -moz-user-select: none; /* For Firefox */
    -ms-user-select: none; /* For Internet Explorer/Edge */
    -webkit-touch-callout: none; /* Disables the long-press callout menu on iOS */
  }

  /* TABLET PORTRAIT STYLES */
  @media (min-width: 576px) {
    :root {
      /* TEXT SIZE */
      --text-size-xs: 0.8rem;
      --text-size-sm: 1rem;
      --text-size-md: 1.2rem;
      --text-size-lg: 1.8rem;
      --text-size-xl: 2.5rem;
      --text-size-2xl: 4rem;
      --text-size-3xl: 5rem;
    }
  }

  /* TABLET LANDSCAPE STYLES */
  @media (min-width: 1024px) {
    :root {
      --text-size-xs: 0.8rem;
      --text-size-sm: 1.1rem;
      --text-size-md: 1.4rem;
      --text-size-lg: 2rem;
      --text-size-xl: 3rem;
      --text-size-2xl: 4.5rem;
      --text-size-3xl: 6rem;
    }
  }
</style>
