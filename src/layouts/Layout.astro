---
import { ClientRouter } from "astro:transitions";

import { WEDDING_COUPLE } from "astro:env/server";

interface Props {
  title?: string;
}

const { title = WEDDING_COUPLE } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <ClientRouter />
  </head>
  <body>
    <div>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    --font-family: "Candara", sans-serif;
    --font-family-secondary: "Lemon Tuesday", cursive;

    --color-primary: #cbad8d;
    --color-secondary: #a48374;
    --color-tertiary: #d1c7bd;
    --color-quaternary: #ebe3db;

    --color-light: #f1ede6;
    --color-dark: #3a2d28;
  }

  html {
    font-family: var(--font-family);
    background: var(--color-tertiary);
    color: var(--color-tertiary);
  }

  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    width: 100dvw;
    height: 100dvh;

    margin-bottom: 40rem; // temporalmente para ver el final de la pÃ¡gina
  }

  body > div {
    width: 100%;
    height: 100%;
  }
</style>
