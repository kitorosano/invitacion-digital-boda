---
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="format-detection" content="telephone=no" />
    <title>{title}</title>

    <SpeedInsights />
    <Analytics />
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Aesthetic";
    src: url("/fonts/Aesthetic.otf") format("opentype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  :root {
    --font-primary: "Helvetica Neue", Arial, sans-serif;
    --font-secondary: "Aesthetic", cursive;

    --color-primary: #cbad8d;
    --color-secondary: #a48374;
    --color-tertiary: #d1c7bd;
    --color-quaternary: #d1c7bd;

    --color-light: #f1ede6;
    --color-dark: #3a2d28;

    --color-text-light: #f1ede6;
    --color-text-dark: #3a2d28;

    --bg-color: var(--color-tertiary);
  }

  html {
    font-family: var(--font-primary);
    background: var(--bg-color);
    color: var(--color-text-dark);
  }

  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;

    max-width: 100dvw;
    min-height: 100dvh;
  }
</style>