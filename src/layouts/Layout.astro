---
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="format-detection" content="telephone=no" />
    <title>{title}</title>

    <SpeedInsights />
    <Analytics />
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Aesthetic";
    src: url("/fonts/Aesthetic.otf") format("opentype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueThin.otf") format("opentype");
    font-weight: 300;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueLight.otf") format("opentype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueRoman.otf") format("opentype");
    font-weight: 500;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueMedium.otf") format("opentype");
    font-weight: 600;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueBold.otf") format("opentype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Helvetica Neue";
    src: url("/fonts/HelveticaNeueBlack.otf") format("opentype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  :root {
    /* FONTS FAMILY */
    --font-primary: "Helvetica Neue", Arial, sans-serif;
    --font-secondary: "Aesthetic", cursive;

    /* COLORS */
    --color-light: #f1ede6;
    --color-dark: #0f130c;
    --color-dark-hover: #262a23;
    --color-grey: #dddcd7;
    --bg-color: #f3f2f1;

    /* TEXT SIZE */
    --text-size-xs: 0.6rem;
    --text-size-sm: 0.8rem;
    --text-size-md: 1rem;
    --text-size-lg: 1.5rem;
    --text-size-xl: 2rem;
    --text-size-2xl: 3rem;
    --text-size-3xl: 4rem;
  }

  html {
    font-family: var(--font-primary);
    background: var(--bg-color);
    color: var(--color-dark);
  }

  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;

    max-width: 100dvw;
    min-height: 100dvh;
    overflow-x: hidden;

    user-select: none; /* Standard property */
    -webkit-user-select: none; /* For Safari and other WebKit browsers on iOS */
    -moz-user-select: none; /* For Firefox */
    -ms-user-select: none; /* For Internet Explorer/Edge */
    -webkit-touch-callout: none; /* Disables the long-press callout menu on iOS */
  }

  /* TABLET PORTRAIT STYLES */
  @media (min-width: 576px) {
    :root {
      /* TEXT SIZE */
      --text-size-xs: 0.8rem;
      --text-size-sm: 1rem;
      --text-size-md: 1.2rem;
      --text-size-lg: 1.8rem;
      --text-size-xl: 2.5rem;
      --text-size-2xl: 4rem;
      --text-size-3xl: 5rem;
    }
  } /* TABLET LANDSCAPE STYLES */
  @media (min-width: 1024px) {
    :root {
      --text-size-xs: 0.8rem;
      --text-size-sm: 1.1rem;
      --text-size-md: 1.4rem;
      --text-size-lg: 2rem;
      --text-size-xl: 3rem;
      --text-size-2xl: 4.5rem;
      --text-size-3xl: 6rem;
    }
  }

  /* DESKTOP STYLES */
  @media (min-width: 1200px) {
    :root {
      --text-size-xs: 0.8rem;
      --text-size-sm: 1.2rem;
      --text-size-md: 1.5rem;
      --text-size-lg: 2.25rem;
      --text-size-xl: 3rem;
      --text-size-2xl: 4.5rem;
      --text-size-3xl: 6rem;
    }
  }

  /* LARGE DESKTOP STYLES */
  @media (min-width: 1440px) {
    :root {
      --text-size-xs: 1rem;
      --text-size-sm: 1.5rem;
      --text-size-md: 2rem;
      --text-size-lg: 3em;
      --text-size-xl: 4rem;
      --text-size-2xl: 6rem;
      --text-size-3xl: 8rem;
    }
  }
</style>
