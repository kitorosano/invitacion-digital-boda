---
interface Props {
  src: string;
}

const { src } = Astro.props;
---

<div class="large-image-separator-container">
  <picture>
    <img src={src} alt="Separador decorativo" />
  </picture>
</div>

<style>
  .large-image-separator-container {
    width: 100%;
    position: relative;
    margin: 2rem 0 0 0;
  }

  .large-image-separator-container > picture {
    width: 100%;
    height: 400px;
    display: block;
    overflow: hidden;
    position: relative;
  }

  .large-image-separator-container > picture > img {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);

    width: 110%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 50%;
    pointer-events: none;

    filter: brightness(0.9);
  }

  .large-image-separator-container::before {
    content: "";
    position: absolute;
    top: -1px;
    left: 0;
    width: 100%;
    z-index: 1;

    height: 20px;
    background: linear-gradient(to top, transparent, var(--bg-color));
  }
  .large-image-separator-container::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    z-index: 1;

    height: 50px;
    background: linear-gradient(to top, var(--bg-color), transparent);
  }

  @media (min-width: 576px) {
  }

  @media (min-width: 1024px) {
    .large-image-separator-container picture {
      height: 600px;
    }

    .large-image-separator-container picture > img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: 50% 50%;
    }
  }
</style>
