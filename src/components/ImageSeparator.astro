---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="image-separator-container">
  <picture>
    <img src={src} alt={alt} />
  </picture>
</div>

<style>
  .image-separator-container {
    width: 100%;
    position: relative;
    margin: 2rem 0 0 0;
  }

  picture {
    width: 100%;
    height: 200px;
    display: block;
    overflow: hidden;
    position: relative;
  }

  picture img {
    position: absolute;
    top: 0;
    left: 0;

    width: 110%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    pointer-events: none;

    filter: brightness(0.9);
    transform: translateX(-4%);
  }

  .image-separator-container::before {
    content: "";
    position: absolute;
    top: -1px;
    left: 0;
    width: 100%;
    z-index: 1;

    height: 20px;
    background: linear-gradient(to top, transparent, var(--bg-color));
  }
  .image-separator-container::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    z-index: 1;

    height: 50px;
    background: linear-gradient(to top, var(--bg-color), transparent);
  }
</style>
