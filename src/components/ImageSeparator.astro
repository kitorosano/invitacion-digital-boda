---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="image-separator-container">
  <img src={src} alt={alt} />
</div>

<style>
  .image-separator-container {
    position: relative;
    margin: 2rem 0 0 0;
    width: 100%;
    overflow: hidden;

    text-align: center;
  }

  .image-separator-container img {
    width: 110%;

    transform: translateX(-4%);
    filter: brightness(0.9);

    pointer-events: none;
  }

  .image-separator-container::before {
    content: "";
    position: absolute;
    top: -1px;
    left: 0;
    width: 100%;
    z-index: 1;

    height: 20px;
    background: linear-gradient(to top, transparent, var(--bg-color));
  }
  .image-separator-container::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    z-index: 1;

    height: 50px;
    background: linear-gradient(to top, var(--bg-color), transparent);
  }
</style>
