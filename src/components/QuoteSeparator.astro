---
interface Props {
  quote: string;
  footer: string;
}

const { quote, footer } = Astro.props;
---

<div class="quote-container">
  <p>{quote}</p>
  <h2>{footer}</h2>
</div>

<style>
  .quote-container {
    width: 100%;
    margin: 0;
    padding: 0.5rem 0;

    text-align: center;
    background-color: var(--color-dark);
    letter-spacing: 0.02em;
  }

  .quote-container > p {
    margin: 0 auto;

    color: var(--color-text-light);

    line-height: 1.5;
    font-size: var(--text-size-md);
    font-style: italic;

    max-width: 80%;
    text-wrap: pretty;
  }

  .quote-container > h2 {
    letter-spacing: 0.05em;
    color: var(--color-text-light);
    font-size: var(--text-size-sm);
    font-weight: 600;
  }

  @media (min-width: 768px) {
  }

  @media (min-width: 1024px) {
    .quote-container {
      padding: 1rem 0;
    }
  }
</style>
