---
import PinIcon from "./icons/Pin.astro";
interface Props {
  name: string;
  time: string;
  place: string;
  address: string;
  mapLink: string;
  image: string;
  imagePosition: "left" | "right";
}

const {
  name,
  time,
  place,
  address,
  mapLink,
  image,
  imagePosition = "left",
} = Astro.props;

const imageLeft = imagePosition === "left";
---

<div class="event-details-container">
  <section
    class={`event-details-section ${imageLeft ? "order-right" : "order-left"}`}
  >
    <img src={image} alt={name} />
  </section>

  <section
    class={`event-details-section ${imageLeft ? "order-left" : "order-right"}`}
  >
    <h2 class="event-name">{name}</h2>

    <div class={`event-info-section`}>
      <p class="event-info">{place}</p>
      <p class="event-time">{time}</p>
      <p class="event-info">{address}</p>
    </div>

    <a
      href={mapLink}
      target="_blank"
      rel="noopener noreferrer"
      class="event-link"
    >
      <PinIcon />
      Ver Ubicaci√≥n</a
    >
  </section>
</div>

<style>
  .event-details-container {
    width: 100%;
    margin: 2rem 0 0 0;

    display: flex;
    flex-direction: row;
  }

  .event-details-section {
    width: 100%;

    position: relative;
    display: flex;
    flex-direction: column;

    color: var(--color-dark);

    letter-spacing: 0.02em;
  }

  .event-details-section.order-left {
    order: 1;
  }

  .event-details-section.order-right {
    order: 2;
  }

  .event-details-section img {
    width: 100%;
    height: 100%;

    object-fit: cover;
    object-position: center;
    pointer-events: none;
  }

  .event-name {
    margin: 0;

    font-family: var(--font-secondary);
    font-size: 2rem;
    font-weight: 800;

    text-align: center;
  }

  .event-info-section {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .event-details-section.order-left .event-info-section {
    padding-left: 1.5rem;
    text-align: left;
  }

  .event-details-section.order-right .event-info-section {
    padding-right: 1.5rem;
    text-align: right;
  }

  .event-info {
    margin: 0;

    max-width: 80%;
    font-size: 0.8rem;
    text-wrap: balance;
  }

  .event-details-section.order-left .event-info {
    margin-right: auto;
  }
  .event-details-section.order-right .event-info {
    margin-left: auto;
  }

  .event-time {
    margin: 0;

    font-size: 1.5rem;
    font-weight: 400;
  }

  .event-link {
    justify-content: center;

    padding: 0.8rem;
    background: var(--color-dark);

    color: var(--color-light);
    font-size: 0.8rem;
    text-decoration: none;
    display: inline-flex;

    transition: background 0.3s ease;
    z-index: 2;
  }

  .event-link:hover {
    background: var(--color-secondary);
  }
</style>
