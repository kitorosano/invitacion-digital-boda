---
import PinIcon from "./icons/Pin.astro";
interface Props {
  name: string;
  time: string;
  place: string;
  address: string;
  mapLink: string;
  image: string;
  imagePosition: "left" | "right";
}

const {
  name,
  time,
  place,
  address,
  mapLink,
  image,
  imagePosition = "left",
} = Astro.props;
---

<div class="event-details-container">
  <picture hidden={imagePosition === "left"}>
    <img src={image} alt={name} />
  </picture>

  <section>
    <h2>{name}</h2>

    <div class={`event-details-info`}>
      <p class="event-info-text">{place}</p>
      <p class="event-info-time">{time}</p>
      <p class="event-info-text">{address}</p>
    </div>

    <a href={mapLink} target="_blank" rel="noopener noreferrer">
      <PinIcon />
      Ver Ubicaci√≥n</a
    >
  </section>

  <picture hidden={imagePosition === "right"}>
    <img src={image} alt={name} />
  </picture>
</div>

<!-- MOBILE STYLES -->
<style>
  .event-details-container {
    width: 100%;
    margin: 2rem auto 3rem auto;

    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 1rem;
  }

  picture {
    width: 30%;
    height: 100%;
    aspect-ratio: 1/2;
  }

  picture img {
    width: 100%;
    height: 100%;

    object-fit: cover;
    object-position: center;
    pointer-events: none;

    border-top-left-radius: 50px;
    border-top-right-radius: 50px;

    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  section {
    width: 40%;
    display: flex;
    flex-direction: column;

    color: var(--color-text-dark);
    letter-spacing: 0.02em;
  }

  section h2 {
    margin: 0;

    font-family: var(--font-secondary);
    font-size: 2rem;
    font-weight: 800;

    text-align: center;
  }

  .event-details-info {
    height: 100%;
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .event-info-text {
    margin: 0;

    max-width: 80%;
    font-size: 0.8rem;
    text-wrap: balance;
  }

  .event-info-time {
    margin: 0.5rem 0;

    font-weight: 600;
  }

  section a {
    justify-content: center;

    padding: 0.75rem 1rem;
    border-radius: 10px;

    color: var(--color-text-light);
    font-size: 0.8rem;
    text-decoration: none;
    display: inline-flex;

    transition: background 0.3s ease;
    background: var(--color-dark);
    z-index: 2;
  }

  section a:hover {
    background: var(--color-secondary);
  }
</style>
