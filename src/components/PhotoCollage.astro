---
interface Props {
  images: string[];
}

const { images } = Astro.props;
---

<div class="photo-collage-container">
  <div class="photo-collage-row">
    <picture><img src={images[0]} alt="Photo Collage 1" /></picture>
  </div>
  <div class="photo-collage-row">
    <picture><img src={images[1]} alt="Photo Collage 2" /></picture>
    <picture><img src={images[2]} alt="Photo Collage 3" /></picture>
    <picture><img src={images[3]} alt="Photo Collage 4" /></picture>
  </div>
  <div class="photo-collage-row">
    <picture><img src={images[4]} alt="Photo Collage 5" /></picture>
  </div>
</div>

<style>
  .photo-collage-container {
    margin: 4rem auto;
    width: 90%;
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.5rem;
  }

  .photo-collage-row {
    display: grid;
    gap: 0.5rem;
  }

  .photo-collage-row:nth-child(1),
  .photo-collage-row:nth-child(3) {
    grid-template-columns: 1fr;
  }

  .photo-collage-row:nth-child(2) {
    grid-template-columns: 1fr 1fr 1fr;
  }

  .photo-collage-row picture {
    width: 100%;
    height: 40svh;
    display: block;
    overflow: hidden;
    position: relative;

    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);

    animation: appear linear;
    animation-timeline: view();
    animation-range: entry 0% cover 30%;
  }

  .photo-collage-row:nth-child(1) > picture > img {
    filter: contrast(1.1) brightness(0.9);
  }

  .photo-collage-row:nth-child(2) > picture {
    height: 22svh;
  }

  .photo-collage-row picture img {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);

    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 50% 50%;
    pointer-events: none;

    filter: brightness(0.9);
  }

  @keyframes appear {
    from {
      opacity: 0;
      transform: scale(0.7);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (min-width: 768px) {
  }

  @media (min-width: 1024px) {
    .photo-collage-container {
      width: 80%;
      gap: 1rem;
    }

    .photo-collage-row picture {
      height: 90svh;
    }

    .photo-collage-row:nth-child(2) > picture {
      height: 70svh;
    }
  }

  @media (min-width: 1440px) {
    .photo-collage-container {
      gap: 1.5rem;
    }

    .photo-collage-row {
      gap: 1rem;
    }
  }
</style>
