---
interface Props {
  couple: string;
  title: string;
  date: string;
  img: string;
}

const { couple, title, date, img } = Astro.props;

const formattedDate = new Date(date)
  .toLocaleDateString("es-ES", {
    year: "2-digit",
    month: "short",
    day: "numeric",
  })
  .split(" ")
  .join("Â·");
---

<div class="hero-container">
  <img class="hero-img" src={img} alt={title} />

  <div class="hero-content">
    <p class="hero-title">{title}</p>
    <p class="hero-couple">{couple}</p>
    <p class="hero-date">{formattedDate}</p>
  </div>
</div>

<style>
  .hero-container {
    width: 100%;
    height: 90%;
    overflow: hidden;
    position: relative;
  }

  .hero-img {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);

    width: 170%;
    height: 100%;
    object-fit: cover;

    filter: brightness(0.7);
  }

  .hero-container::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;

    height: 50px; /* Adjust the height of the blur area */
    background: linear-gradient(to top, var(--color-tertiary), transparent);
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;

    position: absolute;
    bottom: 10%;
    left: 50%;
    transform: translateX(-50%);

    text-align: center;
    gap: 1rem;
  }

  .hero-title {
    margin: 0;

    text-transform: uppercase;
    font-size: 1.5rem;
    font-weight: 300;
    letter-spacing: 0.3rem;
    color: var(--color-light);
    text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.7);
  }

  .hero-couple {
    margin: 0;

    font-family: var(--font-family-secondary);
    font-size: 3rem;
    word-spacing: 0.5rem;
    color: var(--color-light);
    text-shadow: 2px 4px 4px rgba(0, 0, 0, 0.7);
  }

  .hero-date {
    margin: 0;

    text-transform: uppercase;

    font-size: 1.5rem;
    font-weight: 300;
    word-spacing: 0.5rem;
    letter-spacing: 0.3rem;
    color: var(--color-light);
    text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.7);
  }

  @media (min-width: 768px) {
    .hero-img {
      width: 120%;
    }

    .hero-title {
      font-size: 3rem;
    }

    .hero-couple {
      font-size: 6rem;
    }

    .hero-date {
      font-size: 3rem;
    }
  }
</style>
