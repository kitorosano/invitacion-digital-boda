---
interface Props {
  couple: string;
  title: string;
  date: string;
  img: string;
}

const { couple, title, date, img } = Astro.props;
---

<div class="hero-container">
  <img class="hero-img" src={img} alt={title} />
</div>

<div class="hero-content">
  <p class="hero-title">{title}</p>
  <p class="hero-couple">{couple}</p>
  <p class="hero-date">{date}</p>
</div>

<style>
  .hero-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 90%;
    overflow: hidden;
    z-index: -1;
  }

  .hero-img {
    width: 180%;
    height: 100%;
    object-fit: cover;

    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);

    filter: brightness(0.7);
  }

  .hero-content {
    position: relative;
    text-align: center;
    margin-top: 65vh;
  }

  .hero-title {
    margin: 0;

    text-transform: uppercase;
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.3rem;
    color: var(--color-light);
    text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.7);
  }

  .hero-couple {
    margin: 0;

    font-family: var(--font-family-secondary);
    font-size: 4rem;
    word-spacing: 0.5rem;
    color: var(--color-light);
    text-shadow: 2px 4px 4px rgba(0, 0, 0, 0.7);
  }

  .hero-date {
    margin: 0;

    text-transform: uppercase;

    font-size: 2rem;
    font-weight: 300;
    word-spacing: 0.5rem;
    letter-spacing: 0.3rem;
    color: var(--color-light);
    text-shadow: 1px 2px 2px rgba(0, 0, 0, 0.7);
  }
</style>
